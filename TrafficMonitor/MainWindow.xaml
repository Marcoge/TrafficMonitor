<Window x:Class="TrafficMonitor.MainWindow"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="TrafficMonitor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ComboBox ItemsSource="{Binding Adapters}" SelectedValue="{Binding SelectedAdapter, Mode=TwoWay}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding AdapterName}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock DataContext="{Binding SelectedAdapter}" Text="{Binding BytesReceived, Converter={converters:ByteToGbFormatter}}" HorizontalAlignment="Left" Margin="22,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="289"/>
        <TextBlock DataContext="{Binding SelectedAdapter}" Text="{Binding BytesSent}" HorizontalAlignment="Left" Margin="22,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="254"/>

    </Grid>
</Window>
